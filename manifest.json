{
  "manifest_version": 3,
  "name": "Color Spotter",
  "version": "1.1",
  "description": "A simple and intuitive color picker & palettes generator tool",
  "permissions": [],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "script.js"
  },
  "content_scripts": [
    {
      "matches": ["all_urls"],
      "js": ["script.js"],
      "css": ["style.css"]
    }
  ]
}
